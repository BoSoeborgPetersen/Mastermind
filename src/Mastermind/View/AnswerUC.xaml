<UserControl x:Class="Mastermind.View.AnswerUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Mastermind.ViewModel">
    <ItemsControl ItemsSource="{x:Bind VM.Fields}">
        <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:AnswerFieldVM">
                <Grid>
                    <Ellipse Width="10" Height="10" Margin="5, 20" Fill="Black"/>
                    <Ellipse Width="20" Height="20" Margin="5, 20" StrokeThickness="1" Stroke="{x:Bind BorderColor, Mode=OneWay}" Fill="{x:Bind Color, Mode=OneWay}"/>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
